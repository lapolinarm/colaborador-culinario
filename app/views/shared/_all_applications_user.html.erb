<div class="container_def text-center my-4 py-4">
  <div class="custom-title m-5">
  <h1 >Mis Postulaciones</h1>
  </div>

  <!--contenido Card-->
  <div class="bg-black p-4">
    <div class="my-4 mx-auto">
      <% @applied_jobs.each do |job| %>
      <div class="card card-def my-4 bg-primary" data-aos="fade-right">
        <div class="card-body ">
          <p>Restaurante: <%= job.restaurant.commercial_name%></p>
          <p>Direccion del restaurante: <%= job.restaurant.address%></p>
          <p>Teléfono del restaurante: <%= job.restaurant.phone%></p>
          <p>Status: <%= job.job_users.find_by(user: current_user).status %></p>
          <p>Función: <%= job.function.capitalize %></p>
          <p>Descripción: <%= job.description.capitalize %></p>
          <p>Modo de trabajo: <%= job.job_mode %></p>
          <p>Pago por hora: <%= job.payment_hour %> soles </p>

          <p>Fecha: <%= job.date %></p>
        </div>
      </div>
      <% end %>

    </div>
  </div>


</div>
