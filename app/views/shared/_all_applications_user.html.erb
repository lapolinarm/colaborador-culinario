<div class="container_def text-center my-4 py-4">
  <div class="custom-title m-5">
  <h1 >Mis Postulaciones</h1>
  </div>

  <!--contenido Card-->
  <div class=" p-4">
    <div class="row justify-content-center">
      <% @applied_jobs.each do |job| %>
        <div class="col-md-4 my-4 d-flex align-items-stretch">
          <div class="card card-def bg-light w-100 text-start levitate_card" data-aos="fade-right">
            <div class="card-body d-flex flex-column ">
              <% current_job = job.job_users.find_by(user: current_user) %>

              <p><strong>Restaurante: </strong><%= job.restaurant.commercial_name %></p>
              <p><strong>Status: </strong><%= current_job.status.present? ? current_job.status : "sin informacion" %></p>
              <p><strong>Función: </strong><%= job.function.capitalize %></p>
              <p><strong>Descripción: </strong><%= job.description.capitalize %></p>
              <p><strong>Fecha: </strong><%= job.date %></p>
              <%= button_to 'Cancelar', job_path(job), method: :delete, class: 'btn cancel-btn fixed-bottom', data: { turbo_method: :delete } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>


</div>


