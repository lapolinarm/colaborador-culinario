<div class="container_def text-center  my-4 py-4" >
  <div class="custom-title text-center m-5">
    <h1>Mis Pagos</h1>
  </div>

    <!--contenido Card-->
  <div class="p-4">
    <div class="my-4 mx-auto">
      <% @applied_jobs.each do |job| %>
      <div class="card card-def my-4 bg-light w-100" data-aos="fade-right">
        <div class="card-body ">
          <p >Restaurante: <%= job.restaurant.commercial_name%></p>
          <p >Status: <%= job.job_users.find_by(user: current_user).status %></p>
          <p >Metodo de pago: <%= job.job_users.find_by(user: current_user).payment_method_used %></p>
          <p >Monto Pagado: <%= job.job_users.find_by(user: current_user).amount_paid %></p>
          <p >Función: <%= job.function.capitalize %></p>
          <p >Fecha: <%= job.date %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Restaurante</th>
        <th scope="col">Función</th>
        <th scope="col">Metodo de pago</th>
        <th scope="col">Monto Pagado</th>
        <th scope="col">Fecha</th>
        <th scope="col">status</th>
      </tr>
    </thead>
    <tbody>
    <% count = 0 %>
      <% @applied_jobs.each do |job| %>
      <tr>
        <th scope="row"><%= count += 1 %></th>
          <td ><%= job.restaurant.commercial_name%></td>
          <td ><%= job.function.capitalize %></td>
          <td ><%= job.job_users.find_by(user: current_user).payment_method_used %></td>
          <td ><%= job.job_users.find_by(user: current_user).amount_paid %></td>
          <td ><%= job.date %></td>
          <td ><%= job.job_users.find_by(user: current_user).status %></td>

      </tr>
      <% end %>
    </tbody>
  </table>

</div>
