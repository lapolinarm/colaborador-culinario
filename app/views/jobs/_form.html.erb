<div class="container mt-5">
  <div class="text-center custom-title m-5">
    <h1 id="text-custom">Nueva publicaci贸n de trabajo</h1>
  </div>

  <%= link_to restaurants_path, class: 'btn btn-secondary my-4 back-btn' do %>
    <i class="fa-solid fa-chevron-left"></i>
  <% end %>

  <%= simple_form_for [@restaurant, @job] do |f| %>
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@job.errors.count, "error") %> Error falta campos:</h2>
        <ul>
          <% @job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :date, as: :string, label: "Fecha del trabajo", placeholder: "YYYY-MM-DD" %>
    <%= f.input :hour_start, label: "Hora de inicio", as: :time %>
    <%= f.input :hour_end, label: "Hasta", as: :time %>
    <%= f.input :payment_hour, label: "Pago por hora" %>

    <%= f.input :job_type, label: "Tipo de trabajo", collection: Job.job_types.keys.map { |k| [k.humanize, k] }, prompt: "Selecciona un tipo de trabajo" %>

    <%= f.input :job_mode, label: "Modo de trabajo", collection: Job.job_modes.keys.map { |k| [k.humanize, k] }, prompt: "Selecciona un modo de trabajo" %>

    <%= f.input :function, label: "Funci贸n", collection: Job.functions.keys.map { |k| [k.humanize, k] }, prompt: "Selecciona una funci贸n" %>

    <%= f.input :description, label: "Descripci贸n", as: :text %>
    <%= f.input :responsibility, label: "Responsabilidades del trabajo", as: :text %>
    <%= f.input :requirement, label: "Requerimientos del trabajo", as: :text %>
    <div class="text-center my-5">
    <%= f.button :submit, class: 'btn create-btn rounded-pill' %>
    </div>
  <% end %>

  <style>

  .back-btn {
    color: #6c757d;
    background-color: #ffffff;
    border-color: #ffffff;
    border-radius: 10px;
    font-size: 18px;
    font-weight: bold;
  }
  .custom-title {
    background-color: #DAD0FE;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    color: #6c757d !important;
    }

    #text-custom {
      color: #6c757d;
    }


    .create-btn {
      background-color: #E8FFF0; /* Fondo verde claro */
      color: #28A745; /* Texto verde */
      border-radius: 10px;
      margin-left: 10px;
      margin-right: 10px;

      padding: 5px 20px;
      font-size: 19px;
      transition: all 0.3s ease;
      font-weight: bold;
    }

    .create-btn:hover {
        background-color: #218838; /* Fondo verde oscuro al hacer hover */
        color: white; /* Texto blanco al hacer hover */
    }
  </style>
</div>
