<section class="container custom pt-3 mb-5">
  <div class="text-center custom-title m-5">
    <h1 id="text-custom">Registro</h1>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%=
        f.input :email,
                required: true,
                autofocus: true,
                input_html: {
                  autocomplete: 'email',
                }
      %>
      <%=
        f.input :password,
                required: true,
                hint:
                  (
                    if @minimum_password_length
                      "#{@minimum_password_length} characters minimum"
                    end
                  ),
                input_html: {
                  autocomplete: 'new-password',
                }
      %>
      <%=
        f.input :password_confirmation,
                required: true,
                input_html: {
                  autocomplete: 'new-password',
                }
      %>
      <%=
        f.input :role, collection: ["collaborator", "owner"]   %>
    </div>

    <div class="text-center py-4 d-flex flex-row justify-content-center">

    <div class="form-actions">
      <%= f.button :submit, 'Sign up', class: "btn btn-success rounded-pill custom-color mx-3" %>
    </div>
    <% end %>

    <%= render 'devise/shared/links' %>
    </div>


  <style>
  .custom {
    margin-top: 80px;
  }

  .custom-title {
    background-color: #DAD0FE;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    color: #6c757d !important;
  }

  #text-custom {
    color: #6c757d;
  }

  .custom-color {
    color: #6c757d;
  }
  .custom-color:hover {
    color: white;
  }
  </style>
</section>
